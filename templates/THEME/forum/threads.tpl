<div class="simplebb-threads">
	<div class="simplebb-ticon">
        <i class="fa fa-file-text-o"></i>
	</div>
	<div class="simplebb-tname">
		<h3><a href="{full-link}">{title}</a></h3>
		<div>
			{author}
            [forum:cat]<a class="ftext" href="{category-url}"><i class="fa fa-folder"></i>{category}</a>[/forum:cat]
		</div>
	</div>
	<div class="simplebb-tinfo">
		<span><i class="fa fa-eye"></i>{views}</span>
		<span><i class="fa fa-comments-o"></i>{comments-num}</span>
	</div>
	<div class="simplebb-tlastcom">
		{author}
		<span><i class="fa fa-calendar"></i>{date}</span>
	</div>
	<div class="clr"></div>
</div>
