	<h3>{title}</h3>
	<div class="simplebb-thread">
		{poll}
		<div class="simplebb-postbit">
			<div class="simplebb-tavatar">
				<img src="{avatar}" alt="{login}" />
			</div>
			<div class="simplebb-tuser">
				{author}
				<span><i class="fa fa-users"></i>{user-group}</span>
				<span><i class="fa fa-calendar"></i>{date}</span>
