			<div class="clr"></div>
		</div>
		<div class="simplebb-tcontent">
			{full-story}
		</div>[not-group=5]
		<div class="simplebb-tbtn">
			[edit]<i class="fa fa-pencil-square-o"></i>Редагувати[/edit]
		</div>[/not-group]
		<div class="clr"></div>
	</div>
